@model CenkEris.ViewModels.EditViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/editform.css" rel="stylesheet" />
@using (Html.BeginForm()) { 
<div class="container register-form">
    <div class="form">
        <div class="note">

            <img src="@Model.avatar" />
            
        </div>

        <div class="form-content">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <p>Ad</p>
                        @Html.TextBoxFor(x => x.first_name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <p>E-mail adresi</p>
                        @Html.TextBoxFor(x => x.email, new { @class = "form-control" })

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <p>Soyad</p>
                        @Html.TextBoxFor(x => x.last_name, new { @class = "form-control" })

                    </div>
                    <div class="form-group">
                        <p>Resim</p>

                        @Html.TextBoxFor(x => x.link, new { @class = "form-control", type = "file", id = "txt2" })
                        @Html.HiddenFor(x => x.avatar, new { id = "txt1" })

                    </div>


                </div>
            </div>
            
            <input type="submit" class="btnSubmit" value="Kaydet">
        </div>
    </div>
</div>
}
<script>
    document.getElementById("txt2").onchange = function () {
        document.getElementById("txt1").value = this.files[0].name;
    };
</script>